class Solution {
public:
    int subarraysDivByK(vector<int> &arr, int k) {
        int n = arr.size();
        int count = 0;

        unordered_map<int, int> mp;  // (remainder, freq)
        int sum = 0;

        mp[0] = 1;

        for(int i=0; i<n; i++) {
            sum += arr[i];
            
            int rem = sum % k;
            if(rem < 0) rem += k;

            if(mp.find(rem) != mp.end()) count += mp[rem];
            mp[rem]++;
        }

        return count;
    }
};
